<?xml version='1.0' encoding='utf-8'?>
<widget id="com.just_feed.app" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>JustFeed</name>
    <description>
        Attack of the Clones: Simple Cordova/Angular example on reproducing the Just-Eat mobile experience
    </description>
    <author email="davide@codingshack.com" href="https://codingshack.com"></author>

    <hook type="before_build" src="scripts/beforeBuild.sh" />

    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="cordova-plugin-browsersync" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.1.1" />
    <engine name="android" spec="~5.1.1" />

</widget>
